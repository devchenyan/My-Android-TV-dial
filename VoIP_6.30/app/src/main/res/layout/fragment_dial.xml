<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#d66492c4"

    android:paddingStart="330dp"
    android:paddingEnd="330dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="bottom">
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="55555944"
            android:textColor="@color/colorSelected"
            android:textSize="@dimen/font_size_main"
            android:gravity="bottom"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="此号不存在"
            android:textColor="@color/colorSelected"
            android:textSize="@dimen/font_size_small"
            android:gravity="center" />
    </LinearLayout>

    <!--键盘部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <!--第1列-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="20dp">
            <Button
                android:id="@+id/dial_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="@dimen/font_size_main"
                android:textColor="@color/colorSelected"
                android:background="@color/colorButtonBackground"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/dial_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="@dimen/font_size_main"
                android:textColor="@color/colorSelected"
                android:background="@color/colorButtonBackground"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/dial_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="@dimen/font_size_main"
                android:textColor="@color/colorSelected"
                android:background="@color/colorButtonBackground"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/dial_star"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="*"
                android:textSize="@dimen/font_size_main"
                android:textColor="@color/colorSelected"
                android:background="@color/colorButtonBackground"/>
        </LinearLayout>

        <!--第2列-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="20dp">
            <Button
                android:id="@+id/dial_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="@dimen/font_size_main"
                android:textColor="@color/colorSelected"
                android:background="@color/colorButtonBackground"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/dial_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="@dimen/font_size_main"
                android:textColor="@color/colorSelected"
                android:background="@color/colorButtonBackground"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/dial_8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="@dimen/font_size_main"
                android:textColor="@color/colorSelected"
                android:background="@color/colorButtonBackground"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/dial_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="@dimen/font_size_main"
                android:textColor="@color/colorSelected"
                android:background="@color/colorButtonBackground"/>
        </LinearLayout>

        <!--第3列-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="20dp">
            <Button
                android:id="@+id/dial_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="@dimen/font_size_main"
                android:textColor="@color/colorSelected"
                android:background="@color/colorButtonBackground"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/dial_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="@dimen/font_size_main"
                android:textColor="@color/colorSelected"
                android:background="@color/colorButtonBackground"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/dial_9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="@dimen/font_size_main"
                android:textColor="@color/colorSelected"
                android:background="@color/colorButtonBackground"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/dial_sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="#"
                android:textSize="@dimen/font_size_main"
                android:textColor="@color/colorSelected"
                android:background="@color/colorButtonBackground"/>
        </LinearLayout>

        <!--第4列-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="20dp">
            <ImageButton
                android:id="@+id/dial_delete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/delete_icon"
                android:textSize="@dimen/font_size_main"
                android:textColor="@color/colorSelected"
                android:background="@color/colorButtonBackground"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/dial_call"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="视频呼叫"
                android:textSize="@dimen/font_size_main"
                android:textColor="@color/colorSelected"
                android:background="@color/colorButtonBackground"
                android:layout_marginBottom="20dp"/>
            <ImageButton
                android:id="@+id/dial_add"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/add_photo"
                android:textSize="@dimen/font_size_main"
                android:textColor="@color/colorSelected"
                android:background="@color/colorButtonBackground"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>

</LinearLayout>